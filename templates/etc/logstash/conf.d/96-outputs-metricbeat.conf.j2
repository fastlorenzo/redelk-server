{% if monitor_hosts: %}
output {
  if [agent][type] == "metricbeat" {
    elasticsearch{
      hosts => ["localhost:9200"]
      sniffing => true
      manage_template => false
      ilm_enabled => true
      ilm_rollover_alias => "metricbeat-{{ es_version }}"
      ilm_policy => "metricbeat"
      template_name => "metricbeat-{{ es_version }}"
      user => ["redelk_ingest"]
      password => ["{{ es_redelk_ingest_password }}"]
      ssl => true
      cacert => "/etc/logstash/redelkCA.crt"
    }
  }
}
{% endif %}

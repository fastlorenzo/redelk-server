output {
  if [infra][log][type] == "rtops" {
    elasticsearch {
      hosts => ["localhost:9200"]
      sniffing => true
      manage_template => false
      ilm_enabled => true
      ilm_rollover_alias => "rtops"
      ilm_policy => "redelk"
      template_name => "rtops"
      user => ["redelk_ingest"]
      password => ["{{ es_redelk_ingest_password }}"]
      ssl => true
      cacert => "/etc/logstash/redelkCA.crt"
    }
  #stdout { codec => rubydebug }
  #file {
  #  path => "/tmp/logstashout.txt"
  #}
  }
  if [type] == "implantsdb" {
    elasticsearch {
      hosts => ["localhost:9200"]
      sniffing => true
      manage_template => false
      ilm_enabled => false
      index => "implantsdb"
      user => ["redelk_ingest"]
      password => ["{{ es_redelk_ingest_password }}"]
      ssl => true
      cacert => "/etc/logstash/redelkCA.crt"
    }
  #  file {
  #    path => "/tmp/logstashout.txt"
  # }
  }
  if [infra][log][type] == "redirtraffic" {
    elasticsearch {
      hosts => ["localhost:9200"]
      sniffing => true
      manage_template => false
      ilm_enabled => true
      ilm_rollover_alias => "redirtraffic"
      ilm_policy => "redelk"
      template_name => "redirtraffic"
      user => ["redelk_ingest"]
      password => ["{{ es_redelk_ingest_password }}"]
      ssl => true
      cacert => "/etc/logstash/redelkCA.crt"
    }
    #stdout { codec => rubydebug }
    #file {
    #  path => "/tmp/logstashout.txt"
    #}
  }

  if [c2][log][type] == "credentials" {
    elasticsearch {
      hosts => ["localhost:9200"]
      sniffing => true
      manage_template => false
      index => "credentials-%{+YYYY.MM.dd}"
      user => ["redelk_ingest"]
      password => ["{{ es_redelk_ingest_password }}"]
      ssl => true
      cacert => "/etc/logstash/redelkCA.crt"
    }
    #stdout { codec => rubydebug }
    #file {
    #  path => "/tmp/logstashout.txt"
    #}
  }

  if [type] == "bluecheck" {
    elasticsearch {
      hosts => ["localhost:9200"]
      sniffing => true
      manage_template => false
      index => "bluecheck-%{+YYYY.MM.dd}"
      user => ["redelk_ingest"]
      password => ["{{ es_redelk_ingest_password }}"]
      ssl => true
      cacert => "/etc/logstash/redelkCA.crt"
    }
  }

  if [infralogtype] == "email" {
    elasticsearch {
      hosts => ["localhost:9200"]
      sniffing => true
      manage_template => false
      index => "email-%{+YYYY.MM.dd}"
      user => ["redelk_ingest"]
      password => ["{{ es_redelk_ingest_password }}"]
      ssl => true
      cacert => "/etc/logstash/redelkCA.crt"
    }
  }
}

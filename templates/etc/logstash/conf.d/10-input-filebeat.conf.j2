#

input {
  beats {
    port => 5044
    ssl => true
    ssl_certificate => "/etc/logstash/{{ansible_hostname}}.crt"
    ssl_key => "/etc/logstash/{{ansible_hostname}}.pkcs8.key"
    # Next line should only be used for mutual authentication!
    # ssl_certificate_authorities => [ "/etc/logstash/redelkCA.crt" ]
    client_inactivity_timeout => 7200
    ssl_handshake_timeout => 30000
  }
}
